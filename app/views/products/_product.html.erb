<div class = "product">
    <h2>
        <%=link_to product.name, product%>
    <h2>
    <% if product.image.present? %>
        <p>
            <%= image_tag product.image%>
        </p>
    <% end %>
   
    <p>
        <b>Price:</b> $<%= product.price%>
    </p>
    <p>
        <b>Item Type: </b> <%= product.item_type%>
    </p>
    <p>
        <b>Quantity: </b> <%= product.quantity%>
    </p>
</div>